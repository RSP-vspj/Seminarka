{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - clanek index
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h2><a href="{{ path('clanek') }}">Clanek</a></h2>
                </div>
            </div>

            <!-- FILTERING -->
            <div class="col-md-12">
                <div id="filters" class="collapse">

                    <form class="well" action="{{ path('clanek') }}" method="get">
                        <div class="row">

                            <div class="col-md-6">{{ form_row(filterForm.id) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.aktivniClanek) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekZobrazenRedakci) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.cekaNaStanoveniRecenzentu) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.jsouStanoveniRecenzenti) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.probihaRecenzniRizeni) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.recenzniRizeniByloDokonceno) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.recenzniRizeniByloZruseno) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.novePodanaRevize) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekPrijat) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekPrijatSVyhradami) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekPrijatVyzadujeFormalniDoplneni) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekZamitnutNeobstalVRecenznimRizeni) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekZamitnutNesplnujeSablonu) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekZamitnutTematickyNevhodny) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.cekaSeNaAutorovuRevizi) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.nutnostPredatNovouReviziZpetRecenzentum) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.pozadavekNaNahrazeniRevizeAutorem) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.lzePodatNovouRevizi) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.nejednoznacnostRecenznihoRizeni) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.clanekVydan) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.cisloCasopisu) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.neregistrovaniSpoluautori) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.tematickeZamereniSlovne) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.tematickeZamereni) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.nabidnoutZnovuOdmitnutyClanek) }}</div>


                            <div class="col-md-6">{{ form_row(filterForm.uzaverkaCislaCasopisu) }}</div>

                            <div class="col-md-6">
                                {{ form_rest(filterForm) }}
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-warning" name="filter_action" value="filter">
                                        <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filter
                                    </button>
                                    <button type="submit" class="btn btn-default" name="filter_action" value="reset">
                                        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END FILTERING -->


            <div class="col-md-3 pull-left">

                <!-- PAGE SIZE -->
                <div class="pagination form-inline ">
                    <select class="form-control" onchange="window.location = this.value">
                        <option value='{{ path('clanek', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>
                            10
                        </option>
                        <option value='{{ path('clanek', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>
                            20
                        </option>
                        <option value='{{ path('clanek', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>
                            50
                        </option>
                        <option value='{{ path('clanek', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>
                            100
                        </option>
                        <option value='{{ path('clanek', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>
                            500
                        </option>
                    </select>
                </div>
                <!-- END PAGE SIZE -->

            </div>

            <div class="col-md-6">


            </div>

            <div class="col-md-3">

                <a class="btn btn-primary h3 pull-right" href="{{ path('clanek_new') }}" style="margin-bottom:10px">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
                </a>
                <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
                    Filter
                    <span class="caret"></span>
                </a>
            </div>


            <div class="col-md-12">
                {%- if form_errors(filterForm) %}
                    <div class="alert alert-block alert-error fade in form-errors">
                        {{ form_errors(filterForm) }}
                    </div>
                {% endif %}
            </div>

        </div> <!-- /#top -->


        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>


        <div class="row">

            <div class="table-responsive col-md-12">
                <form method="POST" id="bulk_form" action="{{ path('clanek_bulk_action') }} ">
                    <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                        <thead>
                        <tr>
                            <th width="20px"><input type="checkbox" class="check-all" onclick="toggleAll(this)"></th>

                            {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
                            <th>{{ macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('aktivniClanek',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekZobrazenRedakci',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('cekaNaStanoveniRecenzentu',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('jsouStanoveniRecenzenti',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('probihaRecenzniRizeni',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('recenzniRizeniByloDokonceno',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('recenzniRizeniByloZruseno',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('novePodanaRevize',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekPrijat',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekPrijatSVyhradami',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekPrijatVyzadujeFormalniDoplneni',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekZamitnutNeobstalVRecenznimRizeni',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekZamitnutNesplnujeSablonu',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekZamitnutTematickyNevhodny',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('cekaSeNaAutorovuRevizi',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('nutnostPredatNovouReviziZpetRecenzentum',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('pozadavekNaNahrazeniRevizeAutorem',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('lzePodatNovouRevizi',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('nejednoznacnostRecenznihoRizeni',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('clanekVydan',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('cisloCasopisu',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('neregistrovaniSpoluautori',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('tematickeZamereniSlovne',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('tematickeZamereni',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('nabidnoutZnovuOdmitnutyClanek',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>
                            <th>{{ macros.th_sortable('uzaverkaCislaCasopisu',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'clanek') }}</th>


                            <th width="130px">List</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for clanek in claneks %}
                            <tr>
                                <td><input type="checkbox" name="ids[]" onclick='bulkSubmitBtnManage();'
                                           class="check-all" value="{{ clanek.id }}"/></td>
                                <td><a href="{{ path('clanek_edit', { 'id': clanek.id }) }}">{{ clanek.id }}</a></td>
                                <td>{%- if clanek.aktivniClanek %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekZobrazenRedakci %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.cekaNaStanoveniRecenzentu %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.jsouStanoveniRecenzenti %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.probihaRecenzniRizeni %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.recenzniRizeniByloDokonceno %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.recenzniRizeniByloZruseno %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.novePodanaRevize %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekPrijat %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekPrijatSVyhradami %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekPrijatVyzadujeFormalniDoplneni %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekZamitnutNeobstalVRecenznimRizeni %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekZamitnutNesplnujeSablonu %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekZamitnutTematickyNevhodny %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.cekaSeNaAutorovuRevizi %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.nutnostPredatNovouReviziZpetRecenzentum %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.pozadavekNaNahrazeniRevizeAutorem %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.lzePodatNovouRevizi %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.nejednoznacnostRecenznihoRizeni %}Yes{% else %}No{% endif %}</td>
                                <td>{%- if clanek.clanekVydan %}Yes{% else %}No{% endif %}</td>
                                <td>{{ clanek.cisloCasopisu }}</td>
                                <td>{{ clanek.neregistrovaniSpoluautori }}</td>
                                <td>{{ clanek.tematickeZamereniSlovne }}</td>
                                <td>{{ clanek.tematickeZamereni }}</td>
                                <td>{%- if clanek.nabidnoutZnovuOdmitnutyClanek %}{{ clanek.nabidnoutZnovuOdmitnutyClanek|date('Y-m-d') }}{% endif %}</td>
                                <td>{%- if clanek.uzaverkaCislaCasopisu %}{{ clanek.uzaverkaCislaCasopisu|date('Y-m-d') }}{% endif %}</td>

                                <td class="actions">
                                    <a onclick="return confirm('Are you sure!');" title="Delete"
                                       class="btn btn-danger btn-sm"
                                       href="{{ path('clanek_by_id_delete', { 'id': clanek.id}) }}">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </a>
                                    <a title='Show' class="btn btn-info btn-sm"
                                       href="{{ path('clanek_show', { 'id': clanek.id }) }}">
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                    </a>
                                    <a title='Edit' class="btn btn-primary btn-sm"
                                       href="{{ path('clanek_edit', { 'id': clanek.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>


            </div>
        </div> <!-- /#list -->


        <div class="row">
            <div class="col-md-4 pull-left">
                <div class="pagination form-inline ">
                    <select class="form-control" name="bulk_action">
                        <option value="delete">DELETE</option>
                    </select>
                    <input type="submit" id='bulkSubmitBtn' onclick="return confirm('Are you sure?')" form="bulk_form"
                           class="form-control btn btn-danger btn-sm" disabled>
                </div>
            </div>

            <div class='col-md-3 pagination text-center'>
                <p>{{ totalOfRecordsString }}</p>
            </div>

            <div class="col-md-5 text-right">
                {{ pagerHtml|raw }}
            </div>
        </div> <!-- /#bottom -->
    </div>


{% endblock %}

