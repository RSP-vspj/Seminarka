{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - revize
{% endblock %}

{% block body %}

    <div class="container">
        <div id="top" class="row">
            <div class="page-header">
                <h2>View revize <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Id</strong></p>
                <p>
                    {{ revize.id }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Clanekid</strong></p>
                <p>
                    {{ revize.clanekID }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Jmenoclanku</strong></p>
                <p>
                    {{ revize.jmenoClanku }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Cestaksouboru</strong></p>
                <p>
                    {{ revize.cestaKSouboru }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Komentarautoru</strong></p>
                <p>
                    {{ revize.komentarAutoru }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Komentarredaktora</strong></p>
                <p>
                    {{ revize.komentarRedaktora }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Sdeleniadmin</strong></p>
                <p>
                    {{ revize.sdeleniAdmin }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Ostatnisdeleni</strong></p>
                <p>
                    {{ revize.ostatniSdeleni }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Datumpridaniclanku</strong></p>
                <p>
                    {% if revize.datumPridaniClanku %}{{ revize.datumPridaniClanku|date('Y-m-d') }}{% endif %}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Uzaverkarecenznihorizeni</strong></p>
                <p>
                    {% if revize.uzaverkaRecenznihoRizeni %}{{ revize.uzaverkaRecenznihoRizeni|date('Y-m-d') }}{% endif %}
                </p>

            </div>
        </div>

        <hr/>


        <div class="form-group">
            <a class="btn btn-default" href="{{ path('revize') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-primary" href="{{ path('revize_edit', { 'id':  revize.id }) }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
            </a>
            <a class="btn btn-info" href="{{ path('revize_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
            <form action="{{ path('revize_delete', { 'id': revize.id }) }}" method="post" style="display: inline-block">
                <input type="hidden" name="_method" value="DELETE"/>
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete
                </button>
            </form>
        </div>
    </div>

{% endblock %}

